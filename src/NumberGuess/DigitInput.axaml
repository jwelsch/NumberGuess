<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:NumberGuess">
  <Design.PreviewWith>
    <controls:DigitInput Digit="0" FixedWidth="50" />
  </Design.PreviewWith>

  <Style Selector="controls|DigitInput">
    <Setter Property="Background" Value="Gray"/>
    <Setter Property="Foreground" Value="{DynamicResource NumberGuessForeground}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource NumberGuessBorderMedium}"/>
    <Setter Property="Template">
      <ControlTemplate>
        <Border BorderThickness="1" CornerRadius="10" BorderBrush="{DynamicResource NumberGuessForeground}">
          <TextBlock Margin="10" Text="{TemplateBinding Digit}" Width="{TemplateBinding FixedWidth}" TextAlignment="Center" />
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
